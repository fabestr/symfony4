{% block boby %}

<div class="row justify-content-around">
    {% for artist in artists %}
 
  <div class="card text-center w-50 border-primary mx-1 my-2" style="max-width: 15rem;">
    <div class="card-header"><h4 class="card-title">{{artist.nom}}</h4></div>
    <div class="card-body">
      
      <h6 class="card-title"> {{artist.style}} </h6>
      <p class="card-text"> {{artist.presentation}} </p>
      <a href="{{ path ('artist_show', {'id':artist.id})}}" class="btn btn-info">Plus d'info</a>
    </div>
  </div>



    {% endfor %}
</div>



 {% endblock %}