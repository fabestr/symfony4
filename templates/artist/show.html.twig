{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table" id="artistShow" data-id="{{ artist.id }}">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artist.nom }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ artist.pays }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ artist.style }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ artist.presentation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artist_index') }}">back to list</a>
